<h1>Members Only Posts</h1>

<% @posts.each do |post| %>
	<h2><%= post.title %></h2>
	<% if signed_in? %>
		<p>By <%= post.user.name %></p>
	<% end %>
	<p><%= post.body %></p>
<% end %>

<% if signed_in? %>
	<%= link_to "Add a Post", new_post_path %> | <%= link_to "Sign Out", logout_path, method: "delete" %>
<% else %>
	<%= link_to "Sign In", login_path %>
<% end %>
