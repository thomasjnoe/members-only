<h1>New Post</h1>

<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@post.errors.count, "error") %> with your post:</h2>
		<ul>
			<% @apost.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<%= f.label :title %>
	<%= f.text_field :title %><br>

	<%= f.label :body %>
	<%= f.text_area :body %><br>

	<%= f.submit %>
<% end %>

