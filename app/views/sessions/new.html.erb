<h1>Sign In</h1>

<%= form_for(:session, url: login_path) do |f| %>
	<%= f.label :email %>
	<%= f.text_field :email %><br>

	<%= f.label :password %>
	<%= f.password_field :password %><br>

	<%= f.label :remember_me do %>
		<%= f.check_box :remember_me %>
		<span>Remember sign in credentials</span>
	<% end %>

	<%= f.submit "Log In" %>
<% end %>

